generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String           @id @default(cuid())
  name         String
  email        String           @unique
  password     String
  type         String           @default("User")
  hasProfile   Boolean          @default(false)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  // Relation
  fitnessProfile FitnessProfile?
  dietPlan DietPlan[]
}

model FitnessProfile {
  id                  String   @id @default(cuid())
  userId              String   @unique
  gender              String
  dateOfBirth         DateTime
  heightCm            Int
  weightKg            Int
  fitnessGoal         String
  activityLevel       String
  experienceLevel     String
  medicalConditions   String?
  dietType            String?
  preferredWorkoutTime String?
  profilePictureUrl   String?

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relation
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}


model DietPlan {
  id          String   @id @default(cuid())
  userId      String   
  goal        String   // "gain", "lose", "maintain"
  dietType    String   // "vegetarian", "non-vegetarian", etc.
  activityLevel String
  mealsPerDay Int
  dislikes    String[] // array of disliked foods
  allergies   String[] // array of allergies
  cuisinePreference String?
  budget      String?  // "low", "moderate", "high"
  planJson    Json     // generated diet plan from LLM
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}